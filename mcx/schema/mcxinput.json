              },
              "minItems": 3,
              "maxItems": 4
            },
            "Param1": {
              "title": "Source Parameter 1",
              "type": "array",
              "format": "table",
	      "default": [
                0,
                0,
                0,
		0
              ],
              "items": {
                "type": "number"
              },
              "minItems": 4,
              "maxItems": 4
            },
            "Param2": {
              "title": "Source Parameter 2",
              "type": "array",
              "format": "table",
	      "default": [
                0,
                0,
                0,
		0
              ],
              "items": {
                "type": "number"
              },
              "minItems": 4,
              "maxItems": 4
            },
            "Frequency": {
              "title": "Modulation Frequency in Hz",
              "type": "number",
              "default": 0,
              "minimum": 0
            }
          }
        },
        "Detector": {
          "title": "Detector",
          "type": "array",
          "format": "table",
          "items": {
            "type": "object",
            "required": [
              "Pos",
              "R"
            ],
            "properties": {
              "Pos": {
                "title": "Position",
                "type": "array",
                "items": {
                  "type": "number"
                },
		"default": [
                  25,
                  30,
                  0
                ],
                "minItems": 3,
                "maxItems": 3
              },
              "R": {
                "title": "Radius",
                "type": "number",
                "default": 1,
                "minimum": 0
              }
            }
          }
        }
      }
    },
