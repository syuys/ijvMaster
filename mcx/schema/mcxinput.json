            "Pos": {
              "title": "Position",
              "type": "array",
              "format": "table",
              "items": {
                "type": "number"
              },
              "default": [
                30,
                30,
                0
              ],
              "minItems": 3,
              "maxItems": 3
            },
            "Dir": {
              "title": "Launch Direction",
              "type": "array",
              "format": "table",
